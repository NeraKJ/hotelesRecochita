@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Playfair Display', serif;
        background-color: #f3efe8;
        color: #4e342e;
    }

    h3, h4 {
        font-size: 2rem;
        color: #3e2723;
    }

    label {
        font-size: 1.1rem;
    }

    input.form-control {
        font-size: 1.1rem;
        border: 1px solid #6d4c41;
        border-radius: 6px;
        margin-bottom: 10px;
    }

    .btn {
        background-color: #5d4037;
        color: white;
        margin-top: 12px;
        font-size: 1.05rem;
        border-radius: 6px;
        padding: 8px 20px;
    }

        .btn:hover {
            background-color: #3e2723;
        }

    .login-container {
        max-width: 420px;
        margin: 50px auto;
        padding: 30px;
        background-color: #fffaf5;
        border: 1px solid #d7ccc8;
        border-radius: 20px;
        box-shadow: 0 6px 14px rgba(0, 0, 0, 0.12);
        text-align: center;
    }

    .logo {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: #6d4c41;
        text-align: center;
    }

    .error-message {
        color: #b71c1c;
        background-color: #ffebee;
        border: 1px solid #ef9a9a;
        padding: 10px 14px;
        border-radius: 8px;
        margin-bottom: 15px;
        font-size: 1rem;
    }

    .form-group {
        margin-bottom: 16px;
        text-align: left;
    }

    .text-center {
        text-align: center;
    }
</style>

@if (!Model.EstaLogueado)
{
    ViewData["MostrarCerrarSesion"] = false;
    ViewData["MostrarNav"] = false;

    <div class="container">
        <div class="logo">Hoteles Recochita</div>
        <div class="login-container">
            <h3>Iniciar Sesión</h3>

            @if (!string.IsNullOrEmpty(Model.MensajeError))
            {
                <div class="error-message">
                    @Model.MensajeError
                </div>
            }

            <form method="POST">
                <div class="form-group">
                    <label>Email:</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Contraseña:</label>
                    <input type="password" asp-for="Contrasena" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Verificación de Humanidad: ¿Cuánto es 12+1?</label>
                    <input asp-for="RespuestaHumana" class="form-control" />
                </div>

                <input type="submit" value="Limpiar" asp-page-handler="BtClean" class="btn btn-secondary" />
                <input type="submit" value="Entrar" asp-page-handler="BtEnter" class="btn btn-primary" />
            </form>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h4 class="display-4">Bienvenido</h4>
        <img src="/Imagenes/hotel.jpeg"
             alt="Hotel representativo"
             style="max-width: 400px; height: auto; border: 2px solid #a1887f; border-radius: 10px; margin-top: 20px;" />

        <form method="POST">
            <input type="submit" value="Cerrar" asp-page-handler="BtClose" class="btn" />
        </form>
    </div>
}

