@page
@model IndexModel
@{
    ViewData["Title"] = "";
}


<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Playfair Display', serif;
        background-color: #f7f3f0;
        color: #4e342e;
    }

    h3, h4 {
        font-size: 2rem;
        color: #3e2723;
    }

    label {
        font-size: 1.2rem;
    }

    input.form-control {
        font-size: 1.1rem;
        border: 1px solid #6d4c41;
        border-radius: 6px;
        margin-bottom: 10px;
    }

    .btn {
        background-color: #5d4037;
        color: white;
        margin-top: 10px;
        font-size: 1rem;
        border-radius: 5px;
        padding: 6px 12px;
    }

        .btn:hover {
            background-color: #4e342e;
        }

    .login-container {
        max-width: 500px;
        margin: 40px auto;
        padding: 30px;
        background-color: #fff8f1;
        border: 1px solid #d7ccc8;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .text-center {
        font-family: 'Playfair Display', serif;
    }
</style>

@if (!Model.EstaLogueado)
{
    <div class="login-container">
        <CENTER><h3>Login</h3></CENTER>

        <form method="POST">
            <div class="form-group">
                <label>Usuario:</label>
                <input onchange="keyUp(this)" asp-for="@Model.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Contraseña:</label>
                <input type="password" onchange="keyUp(this)" asp-for="@Model.Contrasena" class="form-control" />
            </div>

            <input type="submit" value="Limpiar" asp-page-handler="BtClean" class="btn" />
            <input type="submit" value="Entrar" asp-page-handler="BtEnter" class="btn" />
        </form>
    </div>
}
else
{
    <div class="text-center">
        <h4 class="display-4">Bienvenido</h4>
        <img src="/Imagenes/hotel.jpeg"
             alt="Hotel representativo"
             style="max-width: 400px; height: auto; border: 2px solid #a1887f; border-radius: 10px; margin-top: 20px;" />

        <form method="POST">
            <input type="submit" value="Cerrar" asp-page-handler="BtClose" class="btn" />
        </form>
    </div>
}
